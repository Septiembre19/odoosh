<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>


		<record id="stock_move_line_form" model="ir.ui.view">
			<field name="name">stock.move.line.form</field>
			<field name="model">stock.move.line</field>
			<field name="inherit_id" ref="stock.view_move_line_form"/>
			<field name="arch" type="xml">
				
				<xpath expr="//field[@name='owner_id']" position="after">
					<field name="purchase_id" attrs="{'invisible': [['purchase_id', '=', False]]}"/>
					<field name="sale_id" attrs="{'invisible': [['sale_id', '=', False]]}"/>
					<field name="account_move_id" attrs="{'invisible': [['account_move_id', '=', False]]}"/>
				</xpath>

			</field>
		</record>
		

		<record id="stock_move_line_tree" model="ir.ui.view">
			<field name="name">stock.move.line.tree</field>
			<field name="model">stock.move.line</field>
			<field name="inherit_id" ref="stock.view_move_line_tree"/>
			<field name="mode">primary</field>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='location_id']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='location_dest_id']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='product_id']" position="after">
					<field name="operation"/>
					<field name="partner_name"/>
					<field name="origin"/>
					<field name="account_move" string="Asiento Contable"/>
				</xpath>

			</field>
		</record>


		<record id="action_product_report" model="ir.actions.act_window">
			<field name="name">Informe de Productos</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">stock.move.line</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="action_product_report_tree" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="stock_move_line_tree"/>
			<field name="act_window_id" ref="action_product_report"/>
		</record>
		

		<menuitem id="menu_action_action_product_report"
			action="action_product_report"
			parent="stock.menu_warehouse_report"
			sequence="140"/>

	</data>
</odoo>