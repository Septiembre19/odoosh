<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- model.name inherit form view -->
		<record id="views_customers_field_inherit1_form" model="ir.ui.view">
			<field name="name">views.customers.field.inherit1.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="before">
					<field name="is_company_config" invisible="1" />
				</xpath>

				<xpath expr="//page[1]" position="before">
					<page name="pageConfigEBIPAC" string="ConfiguraciÃ³n FE" autofocus="autofocus" attrs="{'invisible':[('is_company_config','=',False)]}">
						<group>
							<group>


								<field name="TipoClienteFE" attrs="{'required':[('is_company_config','=',True)]}" />
								<!-- required="1"  -->
								<field name="tipoContribuyente" readonly="1" />
								<field name="numeroRUC" attrs="{'invisible':[('TipoClienteFE','not in',('01', '03', '02'))], 'required':[('TipoClienteFE','in',('01', '03', '02'))]}" />
								<field name="digitoVerificadorRUC" attrs="{'invisible':[('TipoClienteFE','not in',('01', '03'))], 'required':[('TipoClienteFE','in',('01', '03'))]}" />
							</group>
							<group>
								<field name="country_id" invisible="1" />
								<field name="province_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':[('TipoClienteFE','not in',('01','03'))], 'required':[('TipoClienteFE','in',('01', '03'))]}" />
								<field name="fe_district_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':[('TipoClienteFE','not in',('01','03'))], 'required':[('TipoClienteFE','in',('01', '03'))]}" />
								<field name="sector_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':[('TipoClienteFE','not in',('01','03'))], 'required':[('TipoClienteFE','in',('01', '03'))]}" />
								<field name="provincia" invisible="1" />
								<field name="distrito" invisible="1" />
								<field name="corregimiento" invisible="1" />
								<field name="CodigoUbicacion" invisible="1" />
								<field name="tipoIdentificacion" attrs="{'invisible':[('TipoClienteFE','not in',('04'))],'required':[('TipoClienteFE','in',('04'))]}" />
								<field name="nroIdentificacionExtranjero" attrs="{'invisible':[('TipoClienteFE','not in',('04'))] ,'required':[('TipoClienteFE','in',('04'))]}" />
							</group>
						</group>
					</page>
				</xpath>
				<field name="country_id" position="attributes">
					<attribute name="attrs">{'required':[('tipoContribuyente','not in',('00',False,'False'))]}</attribute>
				</field>
				<field name="email" position="attributes">
					<attribute name="attrs">{'required':[('tipoContribuyente','not in',('00',False,'False'))]}</attribute>
				</field>
				<field name="vat" position="attributes">
					<attribute name="attrs">{'invisible':[('is_company_config','=',True)]}</attribute>
				</field>
				<!--<field name="l10nlatam_identification_type_id" position="attributes">
					<attribute name="attrs">{'invisible':[('is_company_config','=',True)]}</attribute>
				</field>
				 <field name="vat" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<field name="city" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<field name="state_id" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<field name="zip" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>-->
			</field>
		</record>
	</data>
</odoo>