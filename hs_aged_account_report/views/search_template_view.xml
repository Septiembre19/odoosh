<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

	<template id="search_template_account">
		<button t-if="options.get('account_account')" type="button" class="o_dropdown_toggler_btn btn btn-secondary dropdown-toggle account_account_filter" data-toggle="dropdown">
			<span class="fa fa-folder-open"/> Account
		</button>
		<ul class="dropdown-menu o_filter_menu" role="menu">
			<li class="o_account_report_search js_account_account_m2m"/>
		</ul>
	</template>


	<template id="search_template" inherit_id="account_reports.search_template">
		<xpath expr="//div[hasclass('o_account_reports_filter_partner')]" position="before">
			<div class="btn-group o_dropdown o_account_reports_filter_account_account" t-if="options.get('account_account')">
				<t t-call="hs_aged_account_report.search_template_account"/>
			</div>
		</xpath>
	</template>

</data>
</odoo>