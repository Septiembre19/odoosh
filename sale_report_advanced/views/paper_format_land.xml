<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record model="report.paperformat" id="paperformat_land">
        <field name="name">Paper Landscape</field>
        <field name="default" eval="True"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

    <!-- Para agregar el formato de pagina al reporte -->

    <report model="sale.report.invoice" id="action_invoice_analysis" name="sale_report_advanced.invoice_analysis_view" paperformat="sale_report_advanced.paperformat_land" file="sale_report_advanced.invoice_analysis_view" report_type="qweb-pdf" string="Reporte de Ventas por Vendedor"/>

